extends layouts/base-layout
block append content
  .container
    .row
      .col-md-6.col-md-offset-3
        form
          .form-group
            label  手机号
            input(type="text").form-control#phone
          .form-group
            label 密码
            input(type="password").form-control#password
          .row
            .col-md-6.col-md-offset-3
              .btn.btn-success.btn-block.text-center(onclick="signin()")  登录
        .row
          .col-md-6
            .btn.btn-link.btn-block(href="/forgot-password") 忘记密码  
          .col-md-6
            a.btn.btn-link.btn-block(href="/signup") 加入我们

  
block append script
    script(src="/scripts/signin.js")

